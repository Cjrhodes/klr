{
  "version": 2,
  "builds": [
    {
      "src": "bonnie-marketing-assistant/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd bonnie-marketing-assistant && npm run build && cp -r build/* ../public/",
        "distDir": "public"
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "build": {
    "env": {
      "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "installCommand": "cd bonnie-marketing-assistant && npm install"
}